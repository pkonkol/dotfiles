[gpg]
	program = gpg
[commit]
	gpgsign = false
[includeIf "gitdir:~/projects/personal/"]
	path = .gitconfig-personal
[includeIf "gitdir:~/projects/professional/"]
	path = .gitconfig-professional
[alias]
	lg = log --all --graph --decorate --oneline
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lolb = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all --simplify-by-decoration
	hist = log --pretty=format:\"%h %ad|%s%d [%an]\" --graph --date=short
	lolg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = ls-files
	g = grep --break --heading --line-number
	a = add
	ap = add -p
	ci = commit
	cia = commit --amend
	co = checkout
	s = status
	b = branch
	p = pull --rebase
	pu = push
[color]
	ui=auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = vim
	pager = less -F -X
	autocrlf = false
	eol = crlf
	#safecrlf = false
[grep]
	lineNumber = true
[credential]
	helper = store
[branch]
	sort = -committerdate
